@{
    ViewData["Title"] = "Home Page";
}

<body>
<head>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
</head>
<div class="text-center">
    <h1 class="display-4">Bienvenidos a Casa De tú Mejor Amigo</h1>
    
</div>

</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="margin-left: 120px; margin-right: 120px">
	<ol class="carousel-indicators">
	  <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
	  <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
	  <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
	  <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
	</ol>
	<div class="carousel-inner">
	  <div class="carousel-item active">
		<img src="/imagenes/descarga1.jpg" class="d-block w-100" alt="Sin Imagen..." width="350" height="350">
	  </div>
	  <div class="carousel-item">
		<img src="/imagenes/descarga2.jpg" class="d-block w-100" alt="Sin imagen" width="350" height="350">
	  </div>
	  <div class="carousel-item">
		<img src="/imagenes/descarga3.jpg" class="d-block w-100" alt="Sin imagen..." width="350" height="350">
	  </div>
	  	  
	</div>
	<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
	  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
	  <span class="sr-only">Previous</span>
	</a>
	<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
	  <span class="carousel-control-next-icon" aria-hidden="true"></span>
	  <span class="sr-only">Next</span>
	</a>
</div>

<form asp-action="Registro" method="post">
    <div class="form-group">
      <label class="control-label">Haga click para Registrarse:</label><br/>
      <input type="submit" value="Registrate" class="btn btn-primary" />    
    </div>
</form>

</body>


