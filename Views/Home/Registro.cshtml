@model Semana7PC02.Models.Mascota


  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

<body style="background-color: green;">

<form method="POST" asp-action="RegistroClientes">
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <div class="form-group">
    <label class="control-label">Nombre:</label><br/>
    <input asp-for="nombre" class="form-control"/><br/>
    <span asp-validation-for="nombre" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label class="control-label">Apellido Paterno:</label><br/>
    <input asp-for="apellidoPaterno"  class="form-control"></input><br/>
    <span asp-validation-for="apellidoPaterno" class="text-danger"></span>
  </div>
    <div class="form-group">
    <label class="control-label">Apellido Materno:</label><br/>
    <input asp-for="apellidoMaterno"  class="form-control"></input><br/>
    <span asp-validation-for="apellidoMaterno" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label class="control-label">Tpo De Mascota:</label><br/>
    <select name="tipo" class="form-control mr-sm-2">
      <option value="PERRO">PERRO</option>
      <option value="GATO">GATO</option>
    </select>          
     <br/>
  </div>
   <div class="form-group">
    <label class="control-label">Descripción:</label><br/>
    <textarea asp-for="descripcion"  class="form-control" rows="6" style="resize: none;"></textarea><br/>
    <span asp-validation-for="descripcion" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label class="control-label">Teléfono: </label><br/>
    <input asp-for="telefono" class="form-control-sm"/><br/>
  </div>

  <div class="form-group">
    <label class="control-label">Distrito:</label><br/>
    <select name="distrito" class="form-control mr-sm-2">
      <option value="PERRO">A</option>
      <option value="GATO">B</option>
      <option value="GATO">C</option>
      <option value="GATO">D</option>
    </select>          
      
    <br/>
  </div>
  <div class="form-group">
    <label class="control-label">Dirección:</label><br/>
    <input asp-for="direccion"  class="form-control"></input><br/>
    <span asp-validation-for="direccion" class="text-danger"></span>
  </div>
  <input type="submit" value="Grabar" class="btn btn-primary" />
</form>

</body>